@model JuliePro.Models.RecordViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Record</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="record.Id" />
            <div class="form-group">
                <label asp-for="record.Date" class="control-label"></label>
                <input asp-for="record.Date" class="form-control" />
                <span asp-validation-for="record.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="record.Discipline_Id" class="control-label"></label>
                <select asp-for="record.Discipline_Id" class="form-control" asp-items="Model.disciplines"></select>
                <span asp-validation-for="record.Discipline_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="record.Amount" class="control-label"></label>
                <input asp-for="record.Amount" class="form-control" />
                <span asp-validation-for="record.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="record.Unit" class="control-label"></label>
                <input asp-for="record.Unit" class="form-control" />
                <span asp-validation-for="record.Unit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="record.Trainer_Id" class="control-label"></label>
                <select asp-for="record.Trainer_Id" class="form-control" asp-items="Model.trainers"></select>
                <span asp-validation-for="record.Trainer_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}